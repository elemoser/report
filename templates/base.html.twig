<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My Symfony Site{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header">
            <span class="site-title">My Symfony Site</span>
            <nav>
                <div class="nav-mobile">
                    <a id="nav-toggle" href="#!"><span></span></a>
                </div>
                <ul class="nav-list">
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li><a href="{{ path('report') }}">Report</a></li>
                    <li><a href="{{ path('lucky') }}">Lucky</a></li>
                    <li><a href="{{ path('api_quote') }}">Quotes</a></li>
                    <li><a href="{{ path('card_home') }}">Game</a></li>
                    <li><a href="{{ path('api') }}">API</a></li>
                    <li><a href="{{ path('game_home') }}">Twentyone</a></li>
                </ul>
            </nav>
        </header>
        <main>
        {% block body %}{% endblock %}
        </main>
        <footer>
            <p>Course: mvc</p>
            <p>Developer: elmo22</p>
        </footer>
    </body>
</html>
